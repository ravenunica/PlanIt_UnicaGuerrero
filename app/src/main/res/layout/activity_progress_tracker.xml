<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgPT2L"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bullet"
    tools:context="com.unica.planit.ProgressTracker">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="Progress Tracker"
        android:background="#89FFD9"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Here"
        android:layout_centerHorizontal="true"
        android:paddingTop="80dp"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/etPT1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="To Do 1"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:checked="false"
        android:layout_marginTop="130dp"
        android:background="#89FFD9"/>
    <CheckBox
        android:id="@+id/etPT2"
        android:checked="false"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:text="To Do 2"
        android:textSize="17sp"
        android:background="#89FFD9"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/etPT1"
        />
    <CheckBox
        android:id="@id/etPT3"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#89FFD9"
        android:checked="false"

        android:textSize="17sp"
        android:text="To Do 3"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/etPT2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />
</RelativeLayout>