<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgTD"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bullet"
    tools:context="com.unica.planit.ThirdActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="To Do List"
        android:background="#FFFDCD"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:background="#FFFDCD"
        android:textSize="17sp"
        android:paddingTop="5dp"
        android:layout_marginLeft="315dp"
        android:onClick="editToDo"/>
    <Button
        android:id="@+id/etTD1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:text="To Do 1"
        android:textSize="17sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="90dp"
        android:background="#FFFDCD"
        android:onClick="goToRem1" />
    <Button
        android:id="@+id/etTD2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="To Do 2"
        android:textSize="17sp"
        android:background="#FFFDCD"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:onClick="goToRem2"
        android:layout_below="@+id/etTD1"
        />
    <Button
        android:id="@id/etTD3"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#FFFDCD"
        android:text="To Do 3"
        android:textSize="17sp"
        android:gravity="left"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/etTD2"
        android:onClick="goToRem3"/>

</RelativeLayout>
